{
  "name": "gesture-frame",
  "version": "0.1.1",
  "description": "A Web Component that supports `pinch-zoom` and `pan` for PC and Touch Devices.",
  "license": "WTFPL",
  "repository": "luncheon/gesture-frame",
  "type": "module",
  "main": "gesture-frame.js",
  "types": "gesture-frame.d.ts",
  "files": [
    "gesture-frame.css",
    "gesture-frame.js",
    "gesture-frame.d.ts",
    "gesture-frame.ts"
  ],
  "prettier": {
    "printWidth": 140,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "start": "esbuild --minify --format=esm --sourcemap --outdir=. --serve=0.0.0.0:8000 --servedir=. gesture-frame.ts",
    "build": "tsc -p . && esbuild --minify --format=esm --outdir=. gesture-frame.ts"
  },
  "devDependencies": {
    "esbuild": "^0.17.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
